Boolean ::
    __context make_abstract

    op .if_true  with [.when_true, .else when_false]


true := Boolean new:
    op .if_true  with [.when_true, .else when_false] does: when_true call

false := Boolean new:
    op .if_true  with [.when_true, .else when_false] does: when_false call

(2 > 3) if_true (: something) else (: something_else)

